{
    //http选项
    //"http.proxy": "http://devnet-proxy.oa.com:8080",
    //"http.proxyStrictSSL": false,
    //"http.proxySupport": "on",
    //editor选项
    "editor.fontSize": 18,
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "none",
    "editor.largeFileOptimizations": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.suggest.insertMode": "replace",
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "[go]": {
        "editor.defaultFormatter": "golang.go",
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[xml]": {
        "editor.defaultFormatter": "DotJoshJohnson.xml"
    },
    //"editor.defaultFormatter": "ms-vscode.cpptools",
    //"editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    //"editor.formatOnType": true,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
    "editor.maxTokenizationLineLength": 1000000000000000000000000000000000000,
    //workbench选项
    "workbench.editor.enablePreview": false,
    "workbench.activityBar.visible": true,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    //C_Cpp选项
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.errorSquiggles": "Enabled",
    "C_Cpp.exclusionPolicy": "checkFilesAndFolders",
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.workspaceSymbols": "All",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.intelliSenseCachePath": "${workspaceFolder}/.vscode",
    //"C_Cpp.intelliSenseEngineFallback": "Enabled",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/third_party/fmt/include/**",
        "${workspaceFolder}/third_party/googletest/googletest/include/**",
        "${workspaceFolder}/third_party/googletest/googlemock/include/**",
        "${workspaceFolder}/third_party/jsoncpp/include/**",
        "${workspaceFolder}/third_party/libuuid/**",
        "${workspaceFolder}/third_party/picohttpparser/include/",
        "${workspaceFolder}/third_party/rapidjson/include/**",
        "${workspaceFolder}/third_party/spdlog/include/**",
        "${workspaceFolder}/third_party/tinyxml2/include/",
        "${workspaceFolder}/third_party/yaml/include/**"
    ],
    "C_Cpp.clang_format_fallbackStyle": "none",
    "C_Cpp.clang_format_style": "file",
    //"C_Cpp.clang_format_path": "/root/.vscode-server/extensions/ms-vscode.cpptools-0.28.3/LLVM/bin/clang-format",
    "C_Cpp.intelliSenseCacheSize": 10240,
    //files选项
    "files.autoGuessEncoding": true,
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.vscode/ipch": true,
        "**/*.o": true,
        "**/*.lo": true,
        "**/*.so": true,
        "**/*.so.*": true,
        "**/*.a": true,
        "**/*.la": true,
        "**/.obj": true
    },
    //remote选项
    //"remote.SSH.showLoginTerminal": true,
    "remote.SSH.remotePlatform": {
        "cloud": "linux",
        "docker": "linux"
    },
    "remote.SSH.configFile": "~\\.ssh\\config",
    //git选项
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.fetchOnPull": true,
    //"git.path": "/usr/bin/git",
    //explorer选项
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    //terminal选项
    "terminal.integrated.fontFamily": "DejaVu Sans Mono, monospace",
    "terminal.integrated.fontSize": 21,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.scrollback": 5000,
    "terminal.integrated.wordSeparators": "`~!@#$%^&*()-=+[{]}\\\\|;:'\\\",.<>/?",
    //go选项
    "go.toolsManagement.autoUpdate": true,
    //xml选项
    "xmlTools.enableXmlTreeViewCursorSync": true,
    "xmlTools.enforcePrettySelfClosingTagOnFormat": true,
    "xmlTools.splitXmlnsOnFormat": false
}