{
    //http选项
    //"http.proxy": "http://devnet-proxy.oa.com:8080",
    //"http.proxyStrictSSL": false,
    //"http.proxySupport": "on",

    "window.zoomLevel": 0,
    "problems.decorations.enabled": false,
    "breadcrumbs.enabled": true,

    //editor选项
    "editor.fontSize": 18,
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "none",
    "editor.largeFileOptimizations": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.suggest.insertMode": "replace",
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "editor.defaultFormatter": "ms-vscode.cpptools",
    //"editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    //"editor.formatOnType": true,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",

    //workbench选项
    "workbench.editor.enablePreview": false,
    "workbench.activityBar.visible": true,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    
    //C_Cpp选项
    //"C_Cpp.default.cppStandard": "c++20",
    //"C_Cpp.default.cStandard": "c11",
    "C_Cpp.errorSquiggles": "Disabled",
    "C_Cpp.exclusionPolicy": "checkFilesAndFolders",
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.workspaceSymbols": "All",
    //"C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.intelliSenseCachePath": "${workspaceFolder}/.vscode",
    //"C_Cpp.intelliSenseEngineFallback": "Enabled",
    "C_Cpp.default.includePath": [
        "/usr/include/**",
        "${workspaceFolder}/**"
    ],
    "C_Cpp.clang_format_fallbackStyle": "none",
    "C_Cpp.clang_format_style": "file",
    //"C_Cpp.clang_format_path": "/root/.vscode-server/extensions/ms-vscode.cpptools-0.28.3/LLVM/bin/clang-format",
    "C_Cpp.intelliSenseCacheSize": 10240,

    //files选项
    "files.autoGuessEncoding": true,
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.vscode/ipch": true,
        "**/*.o": true,
        "**/*.lo": true,
        "**/*.so": true,
        "**/*.so.*": true,
        "**/*.a": true,
        "**/*.la": true,
        "**/example_auto": true,
        "**/example_curl": true,
        "**/example_epoll": true,
        "**/example_json_parser": true,
        "**/example_lambda": true,
        "**/example_libco": true,
        "**/example_xml_parser": true,
        "**/example_rapid_json": true,
        "**/client": true,
        "**/server": true,
        "**/test": true,
        "**/zcp_server": true
    },

    //remote选项
    //"remote.SSH.showLoginTerminal": true,
    "remote.SSH.remotePlatform": {
        "cloud": "linux"
    },

    //git选项
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.path": "/usr/bin/git",

    //python选项
    "python.analysis.cacheFolderPath": "${workspaceFolder}/.vscode",
    "python.pythonPath": "/usr/bin/python",
    "python.jediEnabled": false,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "yapf",
    "python.autoComplete.addBrackets": true,
    "python.autoComplete.extraPaths": [
        "${workspaceFolder}/**",
        "/usr/lib/python2.7/site-packages/**"
    ],
    "python.languageServer": "Microsoft",

    "explorer.confirmDelete": false
}